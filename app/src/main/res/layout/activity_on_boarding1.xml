<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding1"
    android:background="@drawable/onboarding_final">

    <ImageView
        android:id="@+id/imgonboarding1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/onboarding1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:contentDescription="Onboarding Image"/>

    <TextView
        android:id="@+id/onBoarding1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgonboarding1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Buy Designs"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="13pt"/>

    <TextView
        android:id="@+id/onBoarding1_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/onBoarding1"
        android:text="Find attractive designs \n from creative workers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="8pt"/>

    <LinearLayout
        android:id="@+id/nextbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/onBoarding1_desc"
        android:layout_marginTop="180dp"
        android:layout_gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:id="@+id/indikator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="150dp">

            <View
                android:id="@+id/indicator1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/baseline_circle_24" />

            <View
                android:id="@+id/indicator2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/baseline_circle_grey" />

            <View
                android:id="@+id/indicator3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/baseline_circle_grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/textNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next &gt;"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="end"
            android:minWidth="100dp"
            android:minHeight="50dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="40dp"
            android:padding="10dp"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>